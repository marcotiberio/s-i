{% extends 'templates/_document.twig' %}

{% block content %}
  
  <h1 class="section-title">Events</h1>
  <ul class="list list-events">
    {% for post in latestEvents %}
    <li class="list-item" onclick="javascript:location.href='{{ post.link }}'">
      {% if post.thumbnail %}
      <div class="featuredInfo">
        <div>{{ post.dateEvent|date("d.m.Y")|escape('wp_kses_post') }}</div>
        <p class="title">{{ post.title }}</p>
      </div>
      {% endif %}
      <div class="featuredImage">
        {{ renderComponent('BlockImage', { image: post.thumbnail, options: { size: 'sizeFull' }, noComponentSpacing: true }) }}
      </div>
    </li>
    {% endfor %}
  </ul>
  
  <h1 class="section-title">Podcasts</h1>
  <ul class="list list-podcasts">
    {% for post in latestPodcasts %}
    <li class="list-item" onclick="javascript:location.href='{{ post.link }}'">
      <div class="featuredInfo">
        <div>{{ post.dateEpisode|date("d.m.Y")|escape('wp_kses_post') }}</div>
        <p class="title" href="{{ post.link }}">{{ post.title }}</p>
      </div>
      {% if post.thumbnail %}
      <div class="featuredImage">
        {{ renderComponent('BlockImage', { image: post.thumbnail, options: { size: 'sizeFull' }, noComponentSpacing: true }) }}
      </div>
      {% endif %}
    </li>
    {% endfor %}
  </ul>

  <h1 class="section-title">Articles</h1>
  <ul class="list list-articles">
    {% for post in latestArticles %}
    <li class="list-item" onclick="javascript:location.href='{{ post.link }}'">
      <div class="featuredInfo">
        <div>{{ post.dateArticle|date("d.m.Y")|escape('wp_kses_post') }}</div>
        <p class="title" href="{{ post.link }}">{{ post.title }}</p>
      </div>
      {% if post.thumbnail %}
      <div class="featuredImage">
        {{ renderComponent('BlockImage', { image: post.thumbnail, options: { size: 'sizeFull' }, noComponentSpacing: true }) }}
      </div>
      {% endif %}
    {% endfor %}
    </li>
  </ul>

  <h1 class="section-title">Artists</h1>
  <ul class="list list-artists">
    {% for post in latestArtists %}
    <li class="list-item" onclick="javascript:location.href='{{ post.link }}'">
      <div class="featuredInfo">
        <div></div>
        <p class="title" href="{{ post.link }}">{{ post.title }}</p>
      </div>
      {% if post.thumbnail %}
      <div class="featuredImage">
        {{ renderComponent('BlockImage', { image: post.thumbnail, options: { size: 'sizeFull' }, noComponentSpacing: true }) }}
      </div>
      {% endif %}
    </li>
    {% endfor %}
  </ul>

  {% for component in post.meta('pageComponents') %}
    {{ renderComponent(component) }}
  {% endfor %}
  
{% endblock %}
