{% if items|length > 0 %}
  <div class="flyntComponent" is="flynt-grid-all-posts">
    <div class="container">
      <div class="grid-filter">
        <a class="filter filter-events pillCircle">EVENTS</a>
        <a class="filter filter-articles pillCircle">ARTICLES</a>
        <a class="filter filter-podcasts pillCircle">PODCASTS</a>
        
      </div>
      <div class="posts grid grid-home">
        {% for item in items %}
            <a class="post grid-item grid-item--{{ item.type.labels.singular_name }}" href="{{ item.link }}">
              {% if item.thumbnail %}
              <div class="featuredInfo featuredInfo-top">
                <div class="date">{{ item.datePost|date("d.m.Y")|escape('wp_kses_post') }}</div>
                <div class="post-type">{{ item.type.labels.singular_name }}</div>
              </div>
              {% endif %}
              <div class="featuredImage">
                <img class="figure-image lazyload"
                src="{{ item.thumbnail.src|resize(600) }}"
                data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                data-sizes="auto">
                {# <img class="figure-image lazyload" src="{{ item.thumbnail.src }}" /> #}
                {# src="{{ slide.images.imageDesktop | resize(2048, 1024) }}"
                data-srcset="{{function('wp_get_attachment_image_srcset', slide.images.imageDesktop.id)}}"
                alt="{{ slide.images.imageDesktop.alt|e }}"> #}
              </div>
              <div class="featuredInfo featuredInfo-bottom">
                <p class="title">{{ item.title }}</p> 
              </div>
            </a>
        {% endfor %}
      </div>
      {# {% set pagination = items.pagination %}
        {% if loadMore %}
          <div class="pagination pagination--center">
            <div class="pagination-loadMore">
            <a data-action="loadMore" href="{{ pagination.next.link }}" class="button button--small">Load More</a>
            </div>
          </div>
      {% endif %} #}
      {# <div class="allPostsLink">
        <a href="{{ postTypeArchiveLink }}" class="button button--link">{{ labels.allPosts }}</a>
      </div> #}
    </div>
  </div>
{% endif %}
